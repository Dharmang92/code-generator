using Microsoft.AspNetCore.Mvc;
using SAMP.Application.Models.<#= EntityName #>;
using Swashbuckle.AspNetCore.Annotations;
using SAMP.Application.Services;
using SAMP.Domain.Result;

namespace SAMP.WebApi.Endpoints.<#= EntityName #>;

public class UpdateById(I<#= ServiceName #>Service <#= LowerServiceName #>Service) : EndpointBaseAsync.WithRequest<<#= EntityName #>UpdateByIdRequest>.WithActionResult
{
    [HttpPut("api/<#= ParamEntityName #>/{Id:int}")]
